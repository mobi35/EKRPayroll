                            <TextBlock Padding="5" Text="Accumulated Hours"/>
                                <TextBlock Margin="40 0 0 0" Padding="5" Text="{Binding Earnings_Accumulated, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>

                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <TextBlock Padding="5" Text="Total Earned"/>
                                <TextBlock Margin="40 0 0 0" Padding="5" Text="{Binding Earnings_TotalAccumulated, Mode=TwoWay}"/>
                            </StackPanel>
                         
                           

                            <Border Padding="5" Background="Gray">
                                <TextBlock  HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="15" Text="Deductions"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Padding="5" Text="Late"/>
                                <TextBlock Margin="130 0 0 0" Padding="5" Text="{Binding Deductions_Late_String_Format, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Padding="5" Text="SSS"/>
                                <TextBlock Margin="130 0 0 0" Padding="5" Text="{Binding Deductions_SSS, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Padding="5" Text="Philhealth"/>
                                <TextBlock Margin="96   0 0 0" Padding="5" Text="{Binding Deductions_Philhealth, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Padding="5" Text="Pagibig"/>
                                <TextBlock Margin="110 0 0 0" Padding="5" Text="{Binding Deductions_Pagibig, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Padding="5" Text="Tax"/>
                                <TextBlock Margin="133 0 0 0" Padding="5" Text="{Binding Deductions_TAX, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <TextBlock Padding="5" Text="Total Deductions"/>
                                <TextBlock Margin="40 0 0 0" Padding="5" Text="{Binding Deductions_Total, Mode=TwoWay}"/>
                            </StackPanel>
                            <Separator/>
                            <Border Background="Gray"> 
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <TextBlock Padding="5" Foreground="White" Text="Total Salary"/>
                                    <TextBlock Foreground="White" Background="Orange" Margin="40 0 0 0" Padding="5" Text="{Binding TotalSalaryStringFormat, Mode=TwoWay}"/>
                            </StackPanel>
                            </Border>
                        </StackPanel>

                    </Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                        <Button Click="PrintPayslip_Click" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal"> 
                            <materialDesign:PackIcon Kind="Printer"/>
                            <TextBlock Text="Print"/>
                            </StackPanel>
                        </Button>


                        <Button   Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"  Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                            
                                <TextBlock Text="Cancel"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost Background="{x:Null}" IsOpen="False"  x:Name="AccountRestoreDialog"  Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >
                <Grid Background="{x:Null}" Width="300" Height="150" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="15 ">
                        <materialDesign:PackIcon Kind="AlertBox" Foreground="DarkRed" Width="50" Height="50"/>
                        <TextBlock  x:Name="RestoreText" Foreground="Gray" FontSize="18" Width="200" Margin="15 5" TextWrapping="Wrap">
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                        <Button Click="AccountRestoreYes" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            Yes
                        </Button>
                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            No
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>



        <materialDesign:DialogHost Background="{x:Null}" Identifier="RootDialog" IsOpen="False" x:Name="ViewAppraisal"  Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >
                <Grid Background="{x:Null}" Width="500" Height="400" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="15 ">
                        <DataGrid Margin="20 50 50 50"  HorizontalScrollBarVisibility="Hidden" x:Name="EmployeeAppraisal" SelectionMode="Extended" Height="300" Background="{x:Null}"
                  EnableRowVirtualization="False" EnableColumnVirtualization="False"   
                  AutoGenerateColumns="False" IsReadOnly="True"  >
                            <DataGrid.Columns>
                                <DataGridTextColumn FontSize="11" Width="100"  Header="Username" Binding="{Binding UserName ,Mode=TwoWay}"/>
                                <DataGridTextColumn FontSize="11" Width="100"  Header="Date Appraisal" Binding="{Binding DateAppraise, StringFormat='d' ,Mode=TwoWay }"/>
                                <DataGridTextColumn FontSize="11" Width="100"  Header="Comment" Binding="{Binding Comment ,Mode=TwoWay}"/>
                                <DataGridTextColumn FontSize="11" Width="150"  Header="Remarks" Binding="{Binding Remarks}"/>
                            </DataGrid.Columns>
                            <DataGrid.ItemContainerStyle >
                                <Style TargetType="{x:Type DataGridRow}" >
                                    <EventSetter  Event="Control.MouseDoubleClick" Handler="AppraisalDoubleClick"/>
                                </Style>
                            </DataGrid.ItemContainerStyle>
                        </DataGrid>


                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                     
                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            Close
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost Background="{x:Null}"  IsOpen="False"  Identifier="RootDialog" x:Name="ViewAttendance"  Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >
              
                <Grid Background="{x:Null}" Width="700" Height="500" HorizontalAlignment="Center">
                    
                    <StackPanel Margin="0 20" HorizontalAlignment="Center" Orientation="Horizontal">
                     
                        <StackPanel Width="200">
                        <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="Start Date"/>
                        <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                            <DatePicker HorizontalAlignment="Right"   VerticalAlignment="Center" Margin="-10 6 -20 0" Padding="7 0 0 1" x:Name="AttendanceStartDate"   Width="200"  Height="25" SelectedDateChanged="StartDateUpdate" >

                            </DatePicker>
                        </Border>
                    </StackPanel>

                    <StackPanel Width="200" Margin="40 0 0 0">
                        <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="End Date"/>
                        <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <DatePicker SelectedDateChanged="EndDateUpdate"  HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="-10 6 -20 0" Padding="7 0 0 1" x:Name="AttendanceEndDate"   Width="200"  Height="25" >

                            </DatePicker>
                        </Border>
                    </StackPanel>

                        <StackPanel Width="200" Margin="40 0 0 0">
                            <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="Print"/>
                              
                            <Button Click="PrintAttendance">Print</Button>
                        </StackPanel>
                      
                    </StackPanel>


                    <DataGrid Margin="20 50 50 50"  HorizontalScrollBarVisibility="Hidden" x:Name="EmployeeAttendance" SelectionMode="Extended" Height="300" Background="{x:Null}"
                  EnableRowVirtualization="False" EnableColumnVirtualization="False"   
                  AutoGenerateColumns="False" IsReadOnly="True"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Date" Binding="{Binding DateTimeStamps,StringFormat='d',Mode=TwoWay}"/>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Time in" Binding="{Binding FirstTimeIn,StringFormat='T',Mode=TwoWay }"/>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Time out" Binding="{Binding TimeOut, StringFormat='T',Mode=TwoWay}"/>
                            <DataGridTextColumn FontSize="11" Width="150"  Header="Accumulated (mins)" Binding="{Binding AccumulatedString}"/>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Late" Binding="{Binding LateString,Mode=TwoWay}"/>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Overtime" Binding="{Binding OverTime,Mode=TwoWay}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                     

                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                           Close
                        </Button>

                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>


        <materialDesign:DialogHost Background="{x:Null}"  IsOpen="False"  Identifier="RootDialog" x:Name="TrainingDialog"  Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >

                <Grid Background="{x:Null}" Width="700" Height="500" HorizontalAlignment="Center">

                    <StackPanel Margin="0 20" HorizontalAlignment="Center" Orientation="Horizontal">

                        <StackPanel Width="200">
                            <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Training"/>
                            <Border  PreviewKeyDown="EnterClicked" Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <ComboBox SelectedIndex="0"  Padding="5 7   0 1" x:Name="TrainingType"  Text="{Binding Path=MaritalStatus , Mode=TwoWay}"   Width="200"  Height="25">
                                   
                                </ComboBox>
                            </Border>

                        </StackPanel>

                        <StackPanel Width="100" Margin="40 0 0 0">
                            <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="Training Date"/>
                            <Border  Width="100"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <DatePicker SelectedDateChanged="EndDateUpdate"  HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="-10 6 -20 0" Padding="7 0 0 1" x:Name="TrainingDate"   Width="100"  Height="25" >

                                </DatePicker>
                            </Border>
                        </StackPanel>

                        <StackPanel Width="100" Margin="40 0 0 0">
                            <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="Training Time"/>
                            <Border  Width="100"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <materialDesign:TimePicker  HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="-10 6 -20 0" Padding="7 0 0 1" x:Name="TrainingTime"   Width="100"  Height="25" >

                                </materialDesign:TimePicker>
                            </Border>
                        </StackPanel>

                        <StackPanel Width="90" Margin="40 0 0 0">
                            <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Visibility="Hidden" Text=""/>
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Click="SubmitTraining">Submit</Button>
                            <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" x:Name="employeeID" Visibility="Hidden" Text=""/>
                        </StackPanel>

                    </StackPanel>


                    <DataGrid Margin="20 50 50 50"  HorizontalScrollBarVisibility="Hidden" x:Name="TrainingList" SelectionMode="Extended" Height="300" Background="{x:Null}"
                  EnableRowVirtualization="False" EnableColumnVirtualization="False"   
                  AutoGenerateColumns="False" IsReadOnly="True"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Full Name" Binding="{Binding FullName,Mode=TwoWay}"/>
                            <DataGridTextColumn FontSize="11" Width="100"  Header="Training" Binding="{Binding Training,Mode=TwoWay }"/>
                            <DataGridTextColumn FontSize="11" Width="200"  Header="Date of training" Binding="{Binding DateOfTraining, StringFormat='D',Mode=TwoWay}"/>
                            <DataGridTextColumn FontSize="11" Width="120"  Header="Time training" Binding="{Binding DateOfTraining, StringFormat='T',Mode=TwoWay}"/>
                            <DataGridTextColumn FontSize="11" Width="150"  Header="Training Status" Binding="{Binding TrainingStatus}"/>
                    
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">

                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            Close
                        </Button>

                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>
        
        

    </Grid>


</UserControl>
