                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" >
                                <materialDesign:PackIcon Kind="AccountKey"/>
                                <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Username"/>
                            </StackPanel>
                            <TextBlock Text="{Binding FirstName, Mode=TwoWay}" HorizontalAlignment="Left"  Foreground="Black" FontSize="18" Width="200" Margin="0 5" TextWrapping="Wrap">

                            </TextBlock>


                        </StackPanel>
                        <StackPanel  Orientation="Horizontal">


                            <StackPanel Width="90">
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="GenderMaleFemale"/>
                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Gender"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Gender, Mode=TwoWay}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>


                            </StackPanel>

                            <StackPanel Margin="20 0 0 0" Width="400">
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="HomeCircle"/>
                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Address"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Address, Mode=TwoWay}"  HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>


                            </StackPanel>


                        </StackPanel>


                        <StackPanel  Orientation="Horizontal">


                            <StackPanel Width="120">
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="Briefcase"/>
                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Position"/>
                                </StackPanel>
                                <TextBlock Text="{Binding FirstName, Mode=TwoWay}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>
                            
                            

                            <StackPanel Margin="-60 0 0 0" Width="400">

                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="Coin" Margin="50 0 0 0"/>
                                    <TextBlock Foreground="Gray" FontSize="10" Text="Salary" Margin="2"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Salary, Mode=TwoWay, StringFormat='N'}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="50 5" TextWrapping="Wrap">

                                </TextBlock>
                            </StackPanel>

                        </StackPanel>


                        <StackPanel  Orientation="Horizontal">


                            <StackPanel Width="80">
                                <StackPanel Orientation="Horizontal" >
                                  
                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Sick Leave"/>
                                </StackPanel>
                                <TextBlock  Text="{Binding SickLeave}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>

                            <StackPanel Width="80">
                                <StackPanel Orientation="Horizontal" >

                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Maternity Leave"/>
                                </StackPanel>
                                <TextBlock  Text="{Binding MaternityLeave}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>


                            <StackPanel Width="80">
                                <StackPanel Orientation="Horizontal" >

                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Paternity Leave"/>
                                </StackPanel>
                                <TextBlock   Text="{Binding PaternityLeave}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>


                            <StackPanel Width="80">
                                <StackPanel Orientation="Horizontal" >

                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Personal Leave"/>
                                </StackPanel>
                                <TextBlock  Text="{Binding PersonalLeave}"  HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>


                            <StackPanel Width="80">
                                <StackPanel Orientation="Horizontal" >

                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Medical Leave"/>
                                </StackPanel>
                                <TextBlock  Text="{Binding MedicalLeave}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>


                            <StackPanel Width="100">
                                <StackPanel Orientation="Horizontal" >

                                    <TextBlock Foreground="Gray" FontSize="10" Margin="2" Text="Bereavement Leave"/>
                                </StackPanel>
                                <TextBlock   Text="{Binding BereavementLeave}" HorizontalAlignment="Left"  Foreground="Black" FontSize="11" Width="200" Margin="0 5" TextWrapping="Wrap">

                                </TextBlock>

                            </StackPanel>

                        </StackPanel>



                    </StackPanel>

                    <StackPanel  Margin="0 240 0 0">

                        <DataGrid  HorizontalScrollBarVisibility="Hidden" x:Name="EmployeeDTR" SelectionMode="Extended" Height="400" Background="{x:Null}"
                  EnableRowVirtualization="False" EnableColumnVirtualization="False"   
                  AutoGenerateColumns="False" IsReadOnly="True"  >
                            <DataGrid.Columns>
                                <DataGridTextColumn FontSize="11" Width="90"  Header="Date" Binding="{Binding DateTimeStamps,StringFormat='d',Mode=TwoWay}"/>
                                <DataGridTextColumn FontSize="11" Width="90"  Header="Time in" Binding="{Binding FirstTimeIn,StringFormat='T',Mode=TwoWay }"/>
                                <DataGridTextColumn FontSize="11" Width="90"  Header="Time out" Binding="{Binding TimeOut, StringFormat='T',Mode=TwoWay}"/>
                                <DataGridTextColumn FontSize="11" Width="135"  Header="Accumulated (mins)" Binding="{Binding AccumulatedString}"/>
                                <DataGridTextColumn FontSize="11" Width="80"  Header="Late" Binding="{Binding LateString,Mode=TwoWay}"/>
                                <DataGridTextColumn FontSize="11" Width="80"  Header="Overtime" Binding="{Binding OverTime,Mode=TwoWay}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15">
                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            Done
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

        <Grid  x:Name="GridBackground" >
           
        </Grid>
        
        <Button x:Name="ButtonOpen" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="30" Height="30" Padding="0" Click="OpenPanel">
            <materialDesign:PackIcon Kind="Menu" Foreground="#FF313131"/>
        </Button>
        <Grid Margin="40 0 0 0" x:Name="MainGrid" Width="auto" >
            <TextBlock></TextBlock>
        </Grid>
        <Grid x:Name="GridMenu" Width="250" HorizontalAlignment="Left" Margin="-250 0 0 0" Background="White" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <StackPanel >
                <Image Height="120" Source="../Assets/ekr.png" Width="250" Margin="-10"/>

                <Grid Visibility="Visible" x:Name="AdminPanel"> 
                <ListView Foreground="#FF313131" FontFamily="Champagne &amp; Limousines" FontSize="18">
                        <ListViewItem  Height="45" Padding="0" Selected="DashboardSelect"  >
                            <StackPanel  Orientation="Horizontal" Margin="10 0">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Foreground="Gray" Margin="5" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" Margin="10"/>


                            </StackPanel>
                        </ListViewItem>



                        <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" CommandTarget="{Binding ElementName=ReportDialog}"  Background="{x:Null}" BorderBrush="{x:Null}" Height="40">
                            <StackPanel Orientation="Horizontal"> 
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Foreground="Gray" Margin="-10 0 15 0" VerticalAlignment="Center"/>
                            <TextBlock Foreground="Black" FontSize="20" FontWeight="Normal" Text="Reports"/>
                            </StackPanel>
                      
                        </Button>

                        <ListViewItem  Height="45" Padding="0" Selected="AccountSelect"  >
                        <StackPanel  Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Account" Width="20" Height="20" Foreground="Gray" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="Accounts" Margin="10"/>
                           
                            
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0" Selected="PayrollSelect">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="LibraryBooks" Width="20" Height="20" Foreground="#FFF08033" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="Payroll" Margin="10"/>
                        </StackPanel>
                    </ListViewItem>

                        <ListViewItem Height="45" Padding="0" Selected="AdminOvertimeSelect">
                            <StackPanel Orientation="Horizontal" Margin="10 0">
                                <materialDesign:PackIcon Kind="LibraryBooks" Width="20" Height="20" Foreground="#FFF08033" Margin="5" VerticalAlignment="Center"/>
                                <TextBlock Text="Overtime" Margin="10"/>
                            </StackPanel>
                        </ListViewItem>

                        <ListViewItem Height="45" Padding="0" Selected="AppraisalSelect">
                            <StackPanel Orientation="Horizontal" Margin="10 0">
                                <materialDesign:PackIcon Kind="LibraryBooks" Width="20" Height="20" Foreground="#FFF08033" Margin="5" VerticalAlignment="Center"/>
                                <TextBlock Text="Appraisal" Margin="10"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="45" Padding="0" Selected="AdminLeaveSelect">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Airplane" Width="20" Height="20" Foreground="#FFD41515" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="Leave" Margin="10"/>

                        </StackPanel>
                    </ListViewItem>
            
                </ListView>
                </Grid>

                <Grid x:Name="UserPanel">
                    <ListView Foreground="#FF313131" FontFamily="Champagne &amp; Limousines" FontSize="18">
                   
                   
                        <ListViewItem Height="45" Padding="0" Selected="EmployeeLeave">
                            <StackPanel Orientation="Horizontal" Margin="10 0">
                                <materialDesign:PackIcon Kind="Airplane" Width="20" Height="20" Foreground="#FFD41515" Margin="5" VerticalAlignment="Center"/>
                                <TextBlock Text="Leave" Margin="10"/>

                            </StackPanel>
                        </ListViewItem>


                        <ListViewItem Height="45" Padding="0" Selected="EmployeeOvertimeSelect">
                            <StackPanel Orientation="Horizontal" Margin="10 0">
                                <materialDesign:PackIcon Kind="Timer" Width="20" Height="20" Foreground="#FFD41515" Margin="5" VerticalAlignment="Center"/>
                                <TextBlock Text="Overtime" Margin="10"/>

                            </StackPanel>
                        </ListViewItem>
                



                     
                    </ListView>
                </Grid>


                <Grid x:Name="HRPanel">
                    <ListView Foreground="#FF313131" FontFamily="Champagne &amp; Limousines" FontSize="18">


                        <ListView Foreground="#FF313131" FontFamily="Champagne &amp; Limousines" FontSize="18">
                            <ListViewItem  Height="45" Padding="0" Selected="DashboardSelect"  >
                                <StackPanel  Orientation="Horizontal" Margin="10 0">
                                    <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Foreground="Gray" Margin="5" VerticalAlignment="Center"/>
                                    <TextBlock Text="Dashboard" Margin="10"/>


                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem Height="45" Padding="0" Selected="PayrollSelect">
                                <StackPanel Orientation="Horizontal" Margin="10 0">
                                    <materialDesign:PackIcon Kind="LibraryBooks" Width="20" Height="20" Foreground="#FFF08033" Margin="5" VerticalAlignment="Center"/>
                                    <TextBlock Text="Payroll" Margin="10"/>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem Height="45" Padding="0" Selected="AppraisalSelect">
                                <StackPanel Orientation="Horizontal" Margin="10 0">
                                    <materialDesign:PackIcon Kind="LibraryBooks" Width="20" Height="20" Foreground="#FFF08033" Margin="5" VerticalAlignment="Center"/>
                                    <TextBlock Text="Appraisal" Margin="10"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Height="45" Padding="0" Selected="AdminLeaveSelect">
                                <StackPanel Orientation="Horizontal" Margin="10 0">
                                    <materialDesign:PackIcon Kind="Airplane" Width="20" Height="20" Foreground="#FFD41515" Margin="5" VerticalAlignment="Center"/>
                                    <TextBlock Text="Leave" Margin="10"/>

                                </StackPanel>
                            </ListViewItem>

                 
                        </ListView>


                       
                    </ListView>
                </Grid>
                <StackPanel VerticalAlignment="Bottom" Orientation="Vertical">
                    <Border CornerRadius="8,0,8,0">
                        <Image  HorizontalAlignment="Left" Margin="10" Height="100" MaxHeight="80" MinWidth="100" MaxWidth="100" MinHeight="100" Stretch="UniformToFill" Width="100" x:Name="PictureSource">
                            <Image.Clip>
                                <EllipseGeometry
                                    Center="48,48"
                                    RadiusX="48"
                                    RadiusY="48"
                                    />

                            </Image.Clip>
                        </Image>
                    </Border>

                    <TextBlock x:Name="UserNameText" Foreground="Gray" Text="Adrian"  FontSize="16" Padding="10"/>
                    <Button Margin="5 0 0 0" HorizontalAlignment="Left"  Width="100" Style="{StaticResource MaterialDesignFlatButton}" Click="GetAccountDetailsData"  Tag="{Binding EmployeePK}"  Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" CommandTarget="{Binding ElementName=AcountDetails}"  Content="My Profile"/>
                    <Button Margin="5 0 0 0" HorizontalAlignment="Left"  Width="100" Style="{StaticResource MaterialDesignFlatButton}"  Tag="{Binding EmployeePK}"  Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" CommandTarget="{Binding ElementName=AccountSettings}"  Content="Settings"/>
                    <Button Click="LogoutAccount" Margin="5 0 0 0" HorizontalAlignment="Left"  Width="100" Style="{StaticResource MaterialDesignFlatButton}">Logout</Button>
                </StackPanel>
            </StackPanel>
            <Button x:Name="ButtonClose" HorizontalAlignment="Right" Foreground="Black" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="30" Height="30" Padding="0" Click="ClosePanel">
                <materialDesign:PackIcon Kind="ArrowLeft"/>
            </Button>
        </Grid>
    </Grid>
</Window>
