<Window x:Class="EyeKnowRight.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeKnowRight.Views"
         xmlns:locals="clr-namespace:EyeKnowRight"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Height="700" Width="1080" ResizeMode="CanMinimize" 
        WindowStartupLocation="CenterScreen"  WindowStyle="None" WindowState="Maximized">

  
    <Window.Resources>
        <Storyboard  x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="250"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GridBackground">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="250"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GridBackground">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click"  SourceName="ButtonClose">
            <BeginStoryboard x:Name="CloseMenu_BeginStoryboard" Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpen">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <materialDesign:DialogHost Background="{x:Null}" IsOpen="False"  x:Name="ReportDialog" Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >
                <StackPanel Background="{x:Null}" Width="250" Height="400" HorizontalAlignment="Center">

                    <Button   HorizontalAlignment="Right" Width="50"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Background="{x:Null}" BorderBrush="{x:Null}">
                        <materialDesign:PackIcon Foreground="Black" Kind="Close"/>
                    </Button>

                    <TextBlock HorizontalAlignment="Center" Text="Reports"/>
                    <StackPanel Margin="10" HorizontalAlignment="Left">

                        <TextBlock/>
                        <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Choose Report"/>
                    <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                            <ComboBox  Padding="5 7   0 1"  x:Name="TypeOfReports"  Width="200"  Height="25">
                            <ComboBoxItem>Attendance Reports</ComboBoxItem>
                            <ComboBoxItem>Assesment Reports</ComboBoxItem>
                            <ComboBoxItem>Employee Masterlist</ComboBoxItem>
                            <ComboBoxItem>Top Performing Employees</ComboBoxItem>
                         </ComboBox>
                    </Border>
                    <TextBlock Foreground="Red" x:Name="Position_ValidationMsg" Padding="4" TextWrapping="Wrap"  FontSize="12" Text="Required" Visibility = "Collapsed"/>
                    </StackPanel>

                    <StackPanel   Margin="10 0 0 0" HorizontalAlignment="Left">
                        <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="Start Date"/>
                        <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                            <DatePicker HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="-10 6 -20 0" Padding="7 0 0 1" x:Name="StartDate"   Width="200"  Height="25" >

                            </DatePicker>
                        </Border>
                    </StackPanel>

                    <StackPanel  Margin="10 0 0 0" HorizontalAlignment="Left">
                        <TextBlock HorizontalAlignment="Left" FontSize="11"  Foreground="Gray" Padding="6" Text="End Date"/>
                        <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                            <DatePicker HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="-10 6 -20 0" Padding="7 0 0 1" x:Name="EndDate"   Width="200"  Height="25" >

                            </DatePicker>
                        </Border>
                    </StackPanel>

                    <StackPanel  Margin="10 0 0 0" HorizontalAlignment="Left">
                        <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Number of entries"/>
                        <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                            <ComboBox  Padding="5 7   0 1" x:Name="NumberOfEntries"     Width="200"  Height="25">
                                <ComboBoxItem>10</ComboBoxItem>
                                <ComboBoxItem>50</ComboBoxItem>
                                <ComboBoxItem>100</ComboBoxItem>
                                <ComboBoxItem>1000</ComboBoxItem>
                            </ComboBox>
                        </Border>

                        <TextBlock/>
                        <Button Click="ReportClick" Content="Report" />
                    </StackPanel>

                  

                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        <materialDesign:DialogHost Background="{x:Null}" IsOpen="False"  x:Name="AccountSettings" Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >
                <Grid Background="{x:Null}" Width="500" Height="400" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal"> 
                    <StackPanel Orientation="Horizontal" Width="170" Margin="4 15 0 0 ">
                       
                        <TextBlock Foreground="Gray" FontSize="12" Width="200" Margin="15 5" TextWrapping="Wrap">
                           
                                <Button Style="{StaticResource MaterialDesignFlatButton}" Click="Click_ChangePassword" Margin="0 0 0 8" Content="Change Password"/>
                         <Button Style="{StaticResource MaterialDesignFlatButton}"  Click="Click_UpdateInformation"  FontSize="12.5" Margin="0 0 0 8" Content="Update Information"/>
                               <Button Style="{StaticResource MaterialDesignFlatButton}"  Click="Click_ChangePicture"  FontSize="12.5" Margin="0 0 0 8" Content="Change Picture"/>
                            </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15 ">

                         
                            <TextBlock x:Name="ChangeAccountPassword" Visibility="Collapsed" Foreground="Gray" FontSize="12" Width="200" Margin="15 5" TextWrapping="Wrap">
                              
                                <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Current Password"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <PasswordBox Padding="2 0 0 1" x:Name="CurrentPassword"      Width="200"  Height="25" ></PasswordBox>

                                  </Border>
                                
                                      <Border Visibility = "Collapsed"  Width="200"  Height="25" x:Name="CurrentPassword_Validation"   Background="{x:Null}" BorderBrush="Black">
                                       <TextBlock Foreground="Red" Padding="4" TextWrapping="Wrap"  x:Name="CurrentPassword_Validation_Text"   FontSize="12" Text="" />
                                   </Border>
                                   <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="New Password"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <PasswordBox Padding="2 0 0 1" x:Name="NewPassword"      Width="200"  Height="25" ></PasswordBox>
                                  </Border>
                               
                                  <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Confirm New Password"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <PasswordBox Padding="2 0 0 1" x:Name="NewPasswordConfirm"     Width="200"  Height="25" ></PasswordBox>
                                  </Border>
                                
                               <Border  Width="200"  Height="25"   Background="{x:Null}" BorderBrush="Black">
                                       <TextBlock Foreground="Red" Padding="4" TextWrapping="Wrap" x:Name="OldPassword_Validation"  FontSize="12" Text="Requsired" Visibility = "Collapsed"/>
                                   </Border>
                                
                                    <Border  x:Name="CompleteFieldValidation" Visibility = "Collapsed"  Width="200"  Height="25"   Background="{x:Null}" BorderBrush="Black">
                                       <TextBlock Foreground="Red" Padding="4" x:Name="CompleteFieldValidation_Text" TextWrapping="Wrap"  FontSize="12" Text="Requsired" />
                                   </Border>
                                <Button Margin="0 10 0 0" Click="Update_Password" Content="Change Password"/>
                                
                           </TextBlock>

                            <TextBlock x:Name="UpdateAccountInformation" Visibility="Collapsed" Foreground="Gray" FontSize="12" Width="200" Margin="15 5" TextWrapping="Wrap">
                              
                                <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="First Name"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <TextBox Padding="2 0 0 1" x:Name="FirstName"  Text="{Binding Path=FirstName , Mode=TwoWay}"    Width="200"  Height="25" ></TextBox>
                                  </Border>
                                
                                   <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Middle Name"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <TextBox Padding="2 0 0 1" x:Name="MiddleName"  Text="{Binding Path=MiddleName , Mode=TwoWay}"    Width="200"  Height="25" ></TextBox>
                                  </Border>
                                
                                  <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Last Name"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <TextBox Padding="2 0 0 1" x:Name="LastName"  Text="{Binding Path=LastName , Mode=TwoWay}"    Width="200"  Height="25" ></TextBox>
                                  </Border>
                                
                                 <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Email Address"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <TextBox Padding="2 0 0 1" x:Name="Email"  Text="{Binding Path=Email , Mode=TwoWay}"    Width="200"  Height="25" ></TextBox>
                                  </Border>
                                
                                 <TextBlock HorizontalAlignment="Left" Foreground="Gray" Padding="6" Text="Address"/>
                                <Border  Width="200"  Height="25"  CornerRadius="4" Background="{x:Null}" BorderBrush="Black" BorderThickness="1">
                                <TextBox Padding="2 0 0 1" x:Name="Address"  Text="{Binding Path=Address , Mode=TwoWay}"    Width="200"  Height="25" ></TextBox>
                                  </Border>
                             
                                    <Border  Width="200"  Height="25"   Background="{x:Null}" BorderBrush="Black">
                                       <TextBlock Foreground="Red" Padding="4" TextWrapping="Wrap" x:Name="UpdateInformationValidation"  FontSize="12" Text="Requsired" Visibility = "Collapsed"/>
                                   </Border>
                                <Button Margin="0 10 0 0" Click="UpdateInformationClick" Content="Update Information"/>
                                
                        </TextBlock>

                            <TextBlock x:Name="ChangeAccountPicture" Visibility="Collapsed" Foreground="Gray" FontSize="12" Width="200" Margin="15 5" TextWrapping="Wrap">

                            
                            <Border BorderBrush="Black" BorderThickness="1" Width="70"  Height="70">  
                                <Image Width="250"  Stretch="Uniform"  MaxHeight="120" MaxWidth="150" Height="70" Source="{Binding Picture}"/>
                                </Border>
                             
                             
                                <StackPanel Margin="0 20 50 0">
                                    <Button Height="25" Width="80" HorizontalAlignment="Right"  Click="Image_Upload"  Style="{StaticResource MaterialDesignFlatButton}"  Content="Upload" />
                                </StackPanel>
                                
                             
                                <Button Margin="0 10 0 0" Click="Update_ProfilePicture" Content="Change Profile Picture"/>
                                
                           </TextBlock>
                      
                    </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="15">
                        <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center">
                            Exit
                        </Button>

                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

        <materialDesign:DialogHost Background="{x:Null}"  IsOpen="False"  x:Name="AcountDetails" Opacity="0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <materialDesign:DialogHost.DialogContent >
                <Grid Background="{x:Null}" Width="630"  Height="590" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="15 ">

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" >
                                        <materialDesign:PackIcon Kind="AccountBox"/>
